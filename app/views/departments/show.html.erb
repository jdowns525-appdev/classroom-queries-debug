<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Department #<%= @the_department.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/departments">
          Go back
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_department.name %>
        
      </dd>

      <dt>
        Number of courses
      </dt>
      <dd>
        <%= Enrollment.where({ :id => @the_course }).count %>
      
      </dd>

    </dl>
  </div>
</div>

<hr>

<h2>Courses</h2>
<ul>
<% Course.where({ :id => @the_department.id }).each do |course| %>
  <%  @the_enrollment.id %>
    <li>
      <a href="/courses/<%= course.name %>"><%= course.count %></a>
    </li>
 
<ul>
<%end%>
