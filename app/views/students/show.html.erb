<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Student #<%= @the_student.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/students">
          Go back
        </a>
      </div>
    </div>

    <dl>
      <dt>
        First name
      </dt>
      <dd>
        <%= @the_student.first_name %>
      </dd>

      <dt>
        Last name
      </dt>
      <dd>
        <%= @the_student.last_name %>
      </dd>

      <dt>
        Email
      </dt>
      <dd>
        <%= @the_student.email %>
      </dd>

      <dt>
        Number of courses
      </dt>
      <dd>
        <%= Student.where({ :id => @the_student.id }).count %>
      </dd>
    </dl>
  </div>
</div>


<hr>

<h3>Course Load</h3>
<ul>
  <% Course.where({:id => @the_course }).each do |course| %>

    <li>
      <% the_course = Enrollment.where({ :student_id => @enrollment.id }).count %>
      <a href="/courses/<%= course.id %>">
        <%= @course.title %>
      </a>
    </li>
  <% end %>
</ul>
